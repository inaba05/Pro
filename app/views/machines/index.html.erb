<h1>Machines#index</h1>
<p>Find me in app/views/machines/index.html.erb</p>

<table>
  <tr>
    <th width="20">No</th>
    <th width="120">台番号</th>
    <th width="200">機種名</th>
    <th width="200">期間開始</th>
    <th width="100">期間終了</th>
  </tr>
  <% i = 1 %>
  <% @machine.each do |m| -%>
  <tr>
    <td><a href="/machines/<%= m.id %>"><%= i %></a></td>
    <td><%= m.number %></td>
    <td><%= m.model_id %></td>
    <td><%= m.from %></td>
    <td><%= m.to %></td>
    <td><a href="/machines/<%= m.id %>">表示</a>
        <a href="/machines/<%= m.id %>/edit">変更</a></td>
  </tr>
  <% i=i+1 %>
  <% end -%>
</table>
<%= button_to "新規作成", machines_new_path ,method: :get %>
